# Shopify App Configuration
SHOPIFY_API_KEY=your_api_key_here
SHOPIFY_API_SECRET=your_api_secret_here
SHOPIFY_SCOPES=read_orders

# Public API Key (for App Bridge - same as SHOPIFY_API_KEY)
NEXT_PUBLIC_SHOPIFY_API_KEY=your_api_key_here

# App Handle (from Shopify Partners - used for billing URL)
# Example: follo-1 (find this in your Partners dashboard)
NEXT_PUBLIC_APP_HANDLE=follo-1

# App URLs
HOST=https://your-app-url.vercel.app
SHOPIFY_APP_URL=https://your-app-url.vercel.app


# Session encryption secret (generate a random string)
ENCRYPTION_SECRET=your_encryption_secret_here

# Cron job secret (for scheduled tasks like trial checks)
CRON_SECRET=your_secure_cron_secret_here

# Admin Secret for accessing global analytics (merchants cannot access)
ADMIN_SECRET=your_secure_admin_secret_here

# Node environment
NODE_ENV=production
